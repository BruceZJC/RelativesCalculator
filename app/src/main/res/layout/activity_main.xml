<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="206dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="互查"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/getresult"
        android:layout_width="206dp"
        android:layout_height="95dp"
        android:background="#FFCE3B"
        android:text="计算"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/father"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="父"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/mother"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="母"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toEndOf="@+id/father"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/dlt"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="删除"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="计算"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dlt"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/husband"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="夫"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/father" />

    <Button
        android:id="@+id/wife"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="妻"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toEndOf="@+id/husband"
        app:layout_constraintTop_toBottomOf="@id/mother" />

    <Button
        android:id="@+id/son"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="儿"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/dlt" />

    <Button
        android:id="@+id/daughter"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="女"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/son"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />

    <Button
        android:id="@+id/oldbro"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="兄"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/husband" />

    <Button
        android:id="@+id/bro"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="弟"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/oldbro"
        app:layout_constraintTop_toBottomOf="@id/wife" />

    <Button
        android:id="@+id/oldsis"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="姐"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/getresult"
        app:layout_constraintStart_toEndOf="@+id/bro"
        app:layout_constraintTop_toBottomOf="@+id/son" />

    <Button
        android:id="@+id/sis"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:background="#000000"
        android:text="妹"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/getresult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oldsis"
        app:layout_constraintTop_toBottomOf="@+id/daughter" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="532dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="351dp" />

</androidx.constraintlayout.widget.ConstraintLayout>